generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

type PriceOptions {
  id                     String
  halfGram               Float?
  gram                   Float?
  twoGram                Float?
  eighthOunce            Float?
  quarterOunce           Float?
  halfOunce              Float?
  ounce                  Float?
  other                  Float?
}

type PromoPriceOptions {
  id                     String
  halfGram               Float?
  gram                   Float?
  twoGram                Float?
  eighthOunce            Float?
  quarterOunce           Float?
  halfOunce              Float?
  ounce                  Float?
  other                  Float?
}

model Product {
  id                 String        @id @default(auto()) @map("_id") @db.ObjectId
  dispensaryName     String
  dispensaryLocation String
  strain             String
  strainType         String
  categoryType       String
  description        String
  weight             String[]
  thc                Float?
  cbd                Float?
  price              PriceOptions
  promoPrice         PromoPriceOptions
  quantity           Int?
  image              String?
  brand              String
  url                String?
}
